        /* Button Styles */
        /* Button Styles */
        .explore-btn {
            background-color: #333; /* Dark background */
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-transform: uppercase;
            font-weight: bolder;
            letter-spacing: 1px;
            border: 0; /* No border */
            transition: transform 0.4s ease, background-color 0.4s ease, box-shadow 0.4s ease; /* Smooth transition for all properties */
            position: relative; /* To enable smooth gliding */
        }

            /* Hover Effect */
            .explore-btn:hover {
                background-color: grey; /* Lighter dark background */
                color: white;
                transform: translateY(-5px); /* Glides upward */
                box-shadow: 0 4px 15px grey; /* Soft shadow for depth */
                text-decoration: none; /* No underline */
            }


        /* Image Hover Effect */
        .explore-img {
            transition: transform 0.3s, box-shadow 0.3s;
            border: 2px solid #333; /* Dark border for a sleek look */
        }

            .explore-img:hover {
                transform: scale(1.1);
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
            }

        /* Column Hover Effect */
        .col-lg-4:hover .explore-heading {
            color: #333; /* Dark color on hover */
        }

        .col-lg-4:hover .explore-text {
            color: #444; /* Darker text color */
        }

        /* Featurette Section Text */
        .featurette-heading {
            font-family: 'Playfair Display', serif;
            font-weight: 700;
            font-size: 2rem;
            color: #333;
        }

            .featurette-heading span {
                color: #333; /* Keep it consistent with the overall theme */
            }

        .featurette-divider {
            border-top: 2px solid #333; /* Black divider lines */
            margin: 50px 0;
        }

        /* Text Hover Effects for Featurettes */
        .featurette-heading:hover {
            color: #555; /* Slight color change on hover */
        }

        .featurette-image:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        }



        .featurette-image-wrapper {
            position: relative;
            width: 100%;
            height: 100%;
            overflow: hidden; /* Ensures image stays within bounds */
        }

        .featurette-image {
            display: block;
            width: 100%;
            height: 100%;
            object-fit: cover; /* Ensures image fills the container */
            transition: transform 0.3s ease-in-out; /* Smooth zoom effect */
        }

        .featurette-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6); /* Dark overlay */
            color: white;
            display: flex;
            flex-direction: column; /* Stack text vertically */
            justify-content: center; /* Center content vertically */
            align-items: center; /* Center content horizontally */
            text-align: center;
            opacity: 0; /* Initially hidden */
            transition: opacity 0.3s ease-in-out;
            padding: 15px;
            box-sizing: border-box;
        }

        .featurette-image-wrapper:hover .featurette-overlay {
            opacity: 1; /* Show overlay on hover */
        }

        .featurette-image-wrapper:hover .featurette-image {
            transform: scale(1.05); /* Subtle zoom effect */
        }

        .featurette-overlay h3,
        .featurette-overlay p {
            margin: 5px 0; /* Adjust spacing between lines */
            word-wrap: break-word; /* Ensure long text breaks properly */
        }

        .nav-item .dropdown-toggle::after {
            display: none !important;
        }

