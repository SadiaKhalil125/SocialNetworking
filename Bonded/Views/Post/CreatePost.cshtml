@model IList<User>
<!-- List of users passed from the ViewComponent -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/site.css" type="text/css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Create Post</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            background-color: linen;
        }

        .main-container {
            display: flex;
            flex: 1;
            justify-content: center;
            align-items: center;
        }

        footer {
            text-align: center;
            position: relative;
            bottom: 0;
            width: 100%;
        }

        .profile-container {
            margin-top: 80px;
            margin-bottom: 70px;
            margin-left: 30px;
            margin-right: 30px;
            width: 600px;
            padding: 30px;
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        }

        .profile-picture {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 15px;
        }

        h3 {
            font-weight: bold;
            color: #444;
            text-align: center;
        }

        .post-btn {
            display: flex;
            justify-content: center;
            color: #fff;
            font-weight: bold;
            border-radius: 5px;
        }

            .post-btn:hover {
                background-color: #004080;
                color: #fff;
                transform: scale(1.05);
                
            }

        
    </style>
</head>
<body>
    <div class="main-container">
        <div class="container profile-container">
            <h3 class="text-center fw-bold" style="color: dimgrey; margin: 0;">Create New Post</h3>

            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="Caption">Caption (optional)</label>
                    <textarea class="form-control" id="Caption" name="caption" ></textarea>
                </div>

                <div class="form-group mt-3">
                    <label for="ImageFile">Image</label>
                    <input type="file" class="form-control" id="ImageFile" name="imageFile" required />
                </div>

                <div class="form-group mt-3">
                    <label for="IsPrivate">Private Post</label>
                    <input type="checkbox" id="IsPrivate" name="check" class="form-check-input" value="true" />
                    <label class="form-check-label" for="IsPrivate">Check if private</label>
                </div>



                <button type="submit" class="btn post-btn btn-dark rounded-4 mt-4">Create Post</button>
            </form>
        </div>
     </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
