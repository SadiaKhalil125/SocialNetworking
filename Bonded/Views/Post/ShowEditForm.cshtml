@model Bonded.Models.ViewModels.PostDetailsViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/site.css" type="text/css" rel="stylesheet" />
    <title>Edit Post</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            background-color: linen;
            background-size: cover;
        }

        footer {
            text-align: center;
            position: relative;
            bottom: 0;
            width: 100%;
        }
        .main-container {
            display: flex;
            flex: 1;
            justify-content: center;
            align-items: center;
        }

        .edit-container {
            background-color: #fff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            margin-top: 100px;
            margin-bottom: 150px;
            width: 400px;
        }

            .edit-container h2 {
                font-weight: bold;
                margin-bottom: 20px;
                text-align: center;
            }

            .edit-container .form-control {
                border-radius: 5px;
            }

            .edit-container .btn {
                background-color: #000;
                color: #fff;
                font-weight: bold;
                border-radius: 5px;
            }

                .edit-container .btn:hover {
                    background-color: #004080;
                    color: #fff;
                }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="edit-container">
            <h2>Edit Post</h2>

            <form method="get" asp-action="EditPost" asp-controller="Post">
               
                <input type="hidden" name="postId" value="@Model.Post.Id" />

                <div class="mb-3">
                    <label for="updatedContent" class="form-label fw-bolder">Caption*</label>
                    <textarea name="updatedContent" id="Content" class="form-control" rows="5" placeholder="Enter your updated caption here" required>@Model.Post.Content</textarea>
                </div>

                <div class="d-grid">
                    <button type="submit"class="btn">Save Changes</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
