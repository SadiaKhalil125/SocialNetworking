<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/site.css" type="text/css" rel="stylesheet" />
    <title>Reset Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Ensure body and html take up the full height */
        html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        background-color: linen;
        }

        .main-container {
        display: flex;
        flex: 1;
        justify-content: center;
        align-items: center;
        }

        .reset-password-container {
        background-color: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        margin-top: 80px;
        margin-bottom: 80px;
        width: 400px; 
        }

        .reset-password-container h2 {
        font-weight: bold;
        margin-bottom: 20px;
        text-align: center;
        }

        .reset-password-container .form-control {
        border-radius: 5px;
        }

        .reset-password-container .btn {
        background-color: #000;
        color: #fff;
        font-weight: bold;
        border-radius: 5px;
        }

        .reset-password-container .btn:hover {
        background-color: #004080;
        color: #fff;
                    transform: scale(1.05);
                }

        .reset-password-container .text-center a {
        color: #000;
        text-decoration: none;
        font-weight: bold;
        }

        .reset-password-container .text-center a:hover {
        color: #004080;
        text-decoration: underline;
        }

        footer {
        text-align: center;
        position: relative;
        bottom: 0;
        width: 100%;
        }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="reset-password-container">
            <h2>RESET PASSWORD</h2>
            @if(ViewData["message"]!=null)
            {
                <div class="btn-danger">ViewData["message"]</div>
            }
            <form method="POST" action="@Url.Action("ResetPassword", "User")">
                <div class="mb-3">
                    <label for="Email" class="form-label fw-bolder">Email*</label>
                    <input type="email" name="Email" class="form-control" id="Email" placeholder="Enter your email" required>
                </div>

                <div class="mb-3">
                    <label for="NewPassword" class="form-label fw-bolder">Current Password*</label>
                    <input type="password" name="currentPassword" class="form-control" id="Current Password" placeholder="Enter new password" required>
                </div>

                <div class="mb-3">
                    <label for="ConfirmPassword" class="form-label fw-bolder">New Password*</label>
                    <input type="password" name="newPassword" class="form-control" id="ConfirmPassword" placeholder="Confirm your new password" required>
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn">RESET PASSWORD</button>
                </div>

                <div class="text-center">
                    <span>Remembered your password?</span>
                    <br>
                    <a href="@Url.Action("Login", "User")">LOGIN HERE</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
