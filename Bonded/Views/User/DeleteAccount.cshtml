@model Bonded.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/site.css" type="text/css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Delete Account</title>
    <style>
        /* Ensure body and html take up the full height */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            background-color: linen;
            /* Replace with your background image if needed */
            background-size: cover;
        }

        .main-container {
            display: flex;
            flex: 1;
            justify-content: center;
            align-items: center;
        }

        .profile-container {
            background-color: #fff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            margin-top: 80px;
            margin-right: 30px;
            margin-left: 30px;
            margin-bottom: 70px; /* Adds space above and below the container */
            width: 500px; /* Sets a consistent width for the container */
        }

            .profile-container h2 {
                font-weight: bold;
                margin-bottom: 20px;
                text-align: center;
            }

            .profile-container .form-control {
                border-radius: 5px;
            }

            .profile-container .btn {
                display: flex;
                justify-content: center;
                color: white;
                background-color:black;
                font-weight: bold;
                border-radius: 5px;
            }

                .profile-container .btn:hover {
                    background-color: #004080;
                    color: #fff;
                    
                    transform: scale(1.05);
                }

            .profile-container .form-text {
                font-size: 0.875rem;
                color: #6c757d;
            }

            .profile-container .text-center a {
                color: #000;
                text-decoration: none;
                font-weight: bold;
            }

                .profile-container .text-center a:hover {
                    color: #004080;
                    text-decoration: underline;
                }

        footer {
            text-align: center;
            position: relative;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="profile-container">
        <form method="POST" action="@Url.Action("DeleteAccount", "User")" class="this">
            <h2>Are you sure you want to delete your account?</h2>

            <div class="mt-4">
                <label for="Reason" class="form-label">Reason for Deleting Account</label>
                <select name="Reason" class="form-select" id="Reason" required>
                    <option value="" disabled selected>Select a reason</option>
                    <option value="Too many emails">Too many emails</option>
                    <option value="Privacy concerns">Privacy concerns</option>
                    <option value="Found a better service">Found a better service</option>
                    <option value="Just don't need it anymore">Just don't need it anymore</option>
                    <option value="Other">Other</option>
                </select>
            </div>

            <div class="mt-4 text-center">
                <button type="submit" class="btn custom-btn ">Delete Account</button>
            </div>
        </form>
    </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
