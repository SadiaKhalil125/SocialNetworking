@model User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/site.css" type="text/css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Profile</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            background-color: linen;
        }

        footer {
            text-align: center;
            position: relative;
            bottom: 0;
            width: 100%;
        }
        .profile-container {
            margin-top: 80px;
            margin-bottom: 70px;
            margin-left: 30px;
            margin-right: 30px;
            width: 500px;
            padding: 30px;
           
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        }

        .main-container {
            display: flex;
            flex: 1;
            justify-content: center;
            align-items: center;
        }


        .profile-picture {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
        }

        .btn-custom {
            background-color: #000;
            color: #fff;
            font-weight: bold;
            border-radius: 5px;
        }



            .btn-custom:hover {
                background-color: #004080;
                color: white;
               
                transform: scale(1.05);
            }
        label {
            font-weight: bold;
        }

        .form-control[disabled] {
            background-color: #f8f9fa;
            color: #495057;
        }

        .form-control {
            border-radius: 5px;
        }
       
    </style>
</head>
<body>
    <div class="main-container">
    <div class="profile-container">
        <h2 class="text-center fw-bold">@Model.UserName</h2>
        <div class="text-center mt-3">
            <a href="@Url.Action("ViewPicture", "User", new { pictureUrl = @Model.ProfilePicture })" target="_blank">
                <img src="@Model.ProfilePicture" alt="Profile Picture" class="profile-picture">
            </a>
        </div>

        <div class="form-group mt-4">
            <label for="Username">Username</label>
            <input type="text" class="form-control" id="Username" value="@Model.UserName" />
        </div>

        <div class="form-group mt-3">
            <label for="Email">Email Address</label>
            <input type="email" class="form-control" id="Email" value="@Model.Email"/>
        </div>

        <form method="post" action="@Url.Action("Updateprofile", "User")" enctype="multipart/form-data">
            <div class="form-group mt-3">
                <label for="NewBio">Update Bio</label>
                <textarea id="NewBio" class="form-control" placeholder="@Model.Bio" name="Bio"></textarea>
            </div>

            <div class="form-group mt-3">
                <label for="ProfilePicture">Change Profile Picture</label>
                <input type="file" id="ProfilePicture" name="ProfilePicture" class="form-control" />
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-custom w-100">Update Profile</button>
            </div>
        </form>

        <div class="text-center mt-3">
            <form method="get" action="@Url.Action("DetailedProfile", "User")">
                <button type="submit" class="btn btn-custom w-100">View Full Profile</button>
            </form>
        </div>
    </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
