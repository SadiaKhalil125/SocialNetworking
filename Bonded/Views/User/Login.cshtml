@model Bonded.Models.LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/site.css" type="text/css" rel="stylesheet" />
    <title>Login Page</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
  
        /* Ensure body and html take up the full height */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            background-color:linen;
            /* background: rgba(0, 0, 0, 0.2) url(../images/pexels-minan1398-1222949.jpg) no-repeat center center fixed; */
            background-size: cover;
        }

        .main-container {
            display: flex;
            flex: 1;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            background-color: #fff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            margin-top:80px;
            margin-bottom:80px;
            width: 400px; /* Sets a limit for the container width */
        }

            .login-container h2 {
                font-weight: bold;
                margin-bottom: 20px;
                text-align: center;
            }

            .login-container .form-control {
                border-radius: 5px;
            }

            .login-container .btn {
                background-color: #000;
                color: #fff;
                font-weight: bold;
                border-radius: 5px;
            }

                .login-container .btn:hover {
                    background-color: #004080;
                    color: #fff;
                }

            .login-container .text-center a {
                color: #000;
                text-decoration: none;
                font-weight: bold;
            }

                .login-container .text-center a:hover {
                    color: #004080;
                    text-decoration: underline;
                }

        footer {
            text-align: center;
      
            position: relative;
            bottom: 0;
            width: 100%;
        }
    </style>

</head>

<body>
    <div class="main-container">
        <div class="login-container">

            <div style="display:flex; justify-content:center">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="p-2 rounded fw-bolder" style="color:darkred; background-color:ghostwhite">@TempData["ErrorMessage"]</div>
                }
            </div>
            <h2 class="mt-3">WELCOME BACK</h2>

            <form method="POST" action="@Url.Action("Login", "User")">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bolder">Email*</label>
                    <input asp-for="Email" type="email" name="Email" class="form-control" id="Email" placeholder="Enter email" required />
                    <span asp-validation-for="Email"></span>
                </div>
              

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bolder">Password*</label>
                    <input asp-for="Password" type="password" name="Password" class="form-control" id="Password" placeholder="Enter password" required />
                    <span asp-validation-for="Password"></span>
                  
                </div>
                <div class="mb-3">
                    <input asp-for="RememberMe" name="RememberMe" type="checkbox" />
                    <label asp-for="RememberMe"></label>
                </div>
             
                <div class="mb-3 text-end">
                    <a href="@Url.Action("ResetPassword", "User")" style="color: black;">Reset your password?</a>
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn">SIGN IN</button>
                </div>

                <div class="text-center">
                    <span>Don't have an account?</span>
                    <br>
                    <a href="@Url.Action("Register", "User")">CREATE ACCOUNT</a>
                </div>
            </form>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
