@model IList<User>
<!-- List of users passed from the ViewComponent -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/site.css" type="text/css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Filtered View</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            background-color: linen;
        }

        .main-container {
            display: flex;
            flex: 1;
            justify-content: center;
            align-items: center;
        }

        footer {
            text-align: center;
            position: relative;
            bottom: 0;
            width: 100%;
        }

        .profile-container {
            margin-top: 100px;
            margin-bottom: 200px;
            margin-left: 30px;
            margin-right: 30px;
            width: 600px;
            padding: 30px;
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        }

        .profile-picture {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 15px;
        }

        h3 {
            font-weight: bold;
            color: #444;
            text-align: center;
        }

        .search-results {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 20px;
        }

        .search-result-item {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 10px 0;
            width: 100%;
        }

            .search-result-item img {
                width: 80px;
                height: 80px;
                border-radius: 50%;
                object-fit: cover;
            }

            .search-result-item a {
                text-decoration: none;
                color: #444;
                font-weight: bold;
                margin-left: 15px;
                font-size: 18px;
            }

        .no-results {
            text-align: center;
            font-size: 18px;
            font-weight: bold;
            color: #999;
        }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="container profile-container">
            <h3 class="text-center fw-bold" style="color: dimgrey;">Followers</h3>

            <div class="search-results ">
                @if (Model != null && Model.Any())
                {
                    @foreach (User user in Model)
                    {
                        <div class="search-result-item border-bottom">
                            <a href="@Url.Action("ViewOtherProfiles", "User", new { id = @user.Id })">
                                <img src="@user.ProfilePicture" style="height:60px;width:60px" alt="Profile Picture" class="profile-picture">
                                @user.UserName
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="no-results">
                        No Followings found.
                    </div>
                }
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
